CREATE TABLE clientes (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(100) NOT NULL,
    idade INT,
    cidade VARCHAR(50),
    estado CHAR(2),
    renda_mensal DECIMAL(10,2),
    data_cadastro DATE,
    email VARCHAR(120)
);

